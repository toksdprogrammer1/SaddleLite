<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netpluspay.saddlelite.activities.PaymentProgressActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amount_tv"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_margin="20dp"
        tools:text="20 PHP"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_tv"
        android:layout_centerVertical="true"
        tools:text="Progress here"
        android:layout_margin="20dp"
        android:gravity="center"
        style="@style/Base.TextAppearance.AppCompat.Title"/>


    <EditText
        android:id="@+id/emailEtxt"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="178dp"
        android:hint="Email"
        android:inputType="text"
        android:maxLength="50"
        android:drawableRight="@drawable/email"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/email_receipt_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="114dp"
        android:background="@color/colorPrimary"
        android:text="@string/email_receipt"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/receipt_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp"
        android:background="@color/colorPrimary"
        android:text="@string/receipt"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"
        android:text="@string/complete"
        android:textColor="@android:color/white" />


</RelativeLayout>
